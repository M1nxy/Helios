{
  "compilerOptions": {
    "strict": false,
    "moduleResolution": "Node",
    "removeComments": false,
    "alwaysStrict": false,
    "pretty": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__"]
}